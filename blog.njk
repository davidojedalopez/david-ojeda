        <h2>{{ post.data.title }}</h2>
    </a>
    <div style="font-size: .9rem; margin-top: -1.8rem; text-decoration: none !important;">
        <time datetime="{{ post.data.published_at | htmlDateString }}">{{ post.data.published_at | readableDate }}</time> <span>Â·</span> <span>Reading time: {{ post | readingTime }}</span>
    </div>
{% endfor %}