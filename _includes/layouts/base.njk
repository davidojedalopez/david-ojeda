        {% if page.filePathStem.startsWith('/posts') and page.filePathStem != '/posts/' %}
            <a href="/archive" class="text-2xl no-underline hover:decoration-wavy hover:decoration-2 hover:underline underline-offset-4 decoration-emerald-700">All posts</a>
